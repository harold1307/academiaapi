{
	"name": "api",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"build": "tsc",
		"watch": "tsc -w",
		"clean": "rimraf dist",
		"prestart": "npm run clean && npm run build",
		"start": "func start",
		"test": "echo \"No tests yet...\"",
		"test:unit": "jest --maxWorkers 1 --watch --testPathPattern=src/Tests/Unit --setupFilesAfterEnv ./src/Tests/singleton.ts",
		"test:e2e": "pnpm docker:up && dotenv -e .env.test -- prisma db push && dotenv -e .env.test -- jest -i --testPathPattern=src/Tests/E2e",
		"create:modulo": "hygen modulo new",
		"create:controller": "hygen controller new",
		"db:pull": "prisma db pull",
		"db:migrate": "prisma migrate dev",
		"db:deploy": "prisma migrate deploy",
		"db:studio": "prisma studio --browser none",
		"format:check": "prettier --check \"src/**/*.ts\"",
		"format:write": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint . --report-unused-disable-directives",
		"lint:fix": "pnpm lint --fix",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"postinstall": "prisma generate"
	},
	"dependencies": {
		"@azure/functions": "4.1.0",
		"@prisma/client": "5.8.1",
		"inversify": "6.0.2",
		"reflect-metadata": "0.2.1",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@types/eslint": "^8.56.2",
		"@types/jest": "^29.5.12",
		"@types/node": "18.x",
		"@typescript-eslint/eslint-plugin": "6.15.0",
		"@typescript-eslint/parser": "6.15.0",
		"dotenv-cli": "^7.3.0",
		"eslint": "8.56.0",
		"hygen": "^6.2.11",
		"jest": "^29.7.0",
		"jest-mock-extended": "3.0.5",
		"prettier": "3.1.1",
		"prisma": "5.8.1",
		"rimraf": "5.0.0",
		"ts-jest": "^29.1.2",
		"typescript": "5.3.3"
	},
	"main": "dist/src/functions/**/*.js"
}
