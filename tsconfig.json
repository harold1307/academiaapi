{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"allowJs": true,
		"experimentalDecorators": true,
		"types": ["reflect-metadata"]
	},
	"exclude": ["node_modules", "dist"],
	"include": [".eslintrc.cjs", "prettier.config.cjs", "**/*.ts"]
}
