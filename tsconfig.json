{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"allowJs": true,
		// necesary for inversify -> https://github.com/inversify/InversifyJS
		"target": "ES2015",
		"lib": ["es6"],
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"types": ["reflect-metadata", "node", "jest"],
		"emitDecoratorMetadata": true
	},
	"exclude": [
		"node_modules",
		"dist"
		// "**/*.test.*",
		// "**/__mocks__/*",
		// "**/__tests__/*"
	],
	"include": [".eslintrc.cjs", "prettier.config.cjs", "**/*.ts"]
}
